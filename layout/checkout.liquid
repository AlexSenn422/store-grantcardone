<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}
    
    
      {{ '//code.jquery.com/jquery-1.12.4.min.js' | script_tag }}
    
    
    {%- include 'plus_google_autocomplete' with settings.plus_enable_google_autocomplete -%}
  
    <style>
      .shappify-motivator-slider{
      opacity:0;
      }
    </style>

</head>
  <body>
    {{ skip_to_content_link }}
    <div class="banner" data-header>
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </div>

    {{ order_summary_toggle }}

    <div class="content" data-content>
      <div class="wrap">
        <div class="main" role="main">
          <div class="main__header">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </div>
          <div class="main__content">
            {{ content_for_layout }}
          </div>
          <div class="main__footer">
            {{ content_for_footer }}
            
          </div>
        </div>
        <div class="sidebar" role="complementary">
          
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          
          <div class="sidebar__content"> 
            
            <!-- Cart Message -->
            {% include 'custom-cart-message' %}
            
            <!-- Cart Message -->
            {% include 'shopify-script-cart-message' %}
            
            {{ content_for_order_summary }}
            
          </div>
        </div>
      </div>
    </div>

    {{ tracking_code }}
    <!-- Checkout Custom Message-->
    <script type="text/javascript">
      
    <img height="1" width="1" style="border-style:none;position:absolute !important;" alt="" src="//insight.adsrvr.org/track/conv/?adv=mr0l22d&ct=0:i6ut1v5&fmt=3"/>
    <script src="https://js.adsrvr.org/up_loader.1.1.0.js" type="text/javascript">
      ttd_dom_ready( function() {
                if (typeof TTDUniversalPixelApi === 'function') {
                    var universalPixelApi = new TTDUniversalPixelApi();
                    universalPixelApi.init("mr0l22d", ["nrsxh6f"], "https://insight.adsrvr.org/track/up");
                }
            });
    </script>
    <!--End Custom Message-->
   
  </body>
</html>